@model List<Crud.ViewModel.TodoVM>

    <div class="d-flex justify-content-between align-items-center">
        <h2>Todo List</h2>
        <a href="@Url.Action("Create", "Todos")" class="btn btn-primary">Create New Todo</a>
    </div>

@if(Model.Count > 0)
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Model)
            {
                <tr>
                    <td>@todo.Title</td>
                    <td>@todo.Description</td>
                    <td>@(todo.IsFinished ? "Completed" : "In Progress")</td>
                    <td>
                        <a href="@Url.Action("Details", "Todos", new { id = todo.Id })" class="btn btn-sm btn-info">Details</a>
                        <a href="@Url.Action("Edit", "Todos", new { id = todo.Id })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Todos", new { id = todo.Id })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h1 class="text-center text-danger">List vide</h1>
}
